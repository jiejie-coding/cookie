{
	"manifest_version": 2,
	"name": "Truck Man",
	"version": "1.0",
	"description": "a cookie truck man!",
	"icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
	"browser_action": {
		"default_icon": {
            "19": "images/icon19.png",
            "38": "images/icon38.png"
        },
		"default_title": "Truck Man",
		"default_popup": "popup.html"
	},
	"content_security_policy": "script-src 'self' https://www.google-analytics.com; object-src 'self'",
	"permissions": [
		"cookies",
		"activeTab",
		"storage",
		"alarms",
		"tabs",
		"notifications",
		"unlimitedStorage",
		"webNavigation",
		"declarativeContent",
		"contextMenus",
		"*://*/*"
    ]
}
